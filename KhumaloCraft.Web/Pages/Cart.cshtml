@page
@model KhumaloCraft.Web.Pages.CartModel
@using System.Globalization
@{
    var cultureInfo = new CultureInfo("en-ZA");
}
<div class="cart">
  <div class="container mt-5">
    <h2>Your Cart</h2>

    @if (Model.Cart.Items.Count == 0)
    {
      <div class="alert alert-info mt-3">Your cart is empty.</div>
    }
    else
    {
      <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
          <tbody>
            @foreach (var item in Model.Cart.Items)
            {
              <tr>
                <td>@item.ProductName</td>
                <td>@item.Price.ToString("C", cultureInfo)</td>
                <td>@item.Quantity</td>
                <td>@((item.Price * item.Quantity).ToString("C", cultureInfo))</td>
              </tr>
            }
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4">
          <h4>Total: @(Model.Cart.Items.Sum(i => i.Price * i.Quantity).ToString("C", cultureInfo))</h4>
          <form method="post" action="/Checkout">
              <button type="submit" class="btn btn-success px-4 py-2">Place order</button>
          </form>
      </div>
    }
  </div>
</div>
