@page
@model KhumaloCraft.Pages.Auth.LoginModel
@{
  ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
  <div class="form-group">
    <label asp-for="LoginDTO.Email">Email</label>
    <input asp-for="LoginDTO.Email" class="form-control" />
    <span asp-validation-for="LoginDTO.Email" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="LoginDTO.Password">Password</label>
    <input asp-for="LoginDTO.Password" class="form-control" type="password" />
    <span asp-validation-for="LoginDTO.Password" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Login</button>

  @if (!string.IsNullOrEmpty(Model.ErrorMessage))
  {
    <div class="alert alert-danger">@Model.ErrorMessage</div>
  }
</form>