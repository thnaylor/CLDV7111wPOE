@page "{id:int}"
@model KhumaloCraft.Web.Pages.Admin.Categories.DeleteModel
@{
}

<div class="categories">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 text-center">
        <h2 class="fw-bold text-danger mb-4">Delete Category</h2>
        <p class="lead">Are you sure you want to delete this category? This action cannot be undone.</p>

        <form method="post" class="d-inline">
          <button type="submit" class="btn btn-danger px-4 py-2">Delete</button>
        </form>
        <a asp-page="/Admin/Categories/Index" class="btn btn-outline-secondary px-4 py-2 ms-2">Cancel</a>
      </div>
    </div>
  </div>
</div>
