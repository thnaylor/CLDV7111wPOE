@page
@model KhumaloCraft.Web.Pages.Admin.Categories.IndexModel
@{
}

<div class="categories">
  <div class="container mt-5 categories">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="fw-bold">Category Management</h2>
          <a asp-page="/Admin/Categories/Create" class="btn btn-outline-dark px-4">Create New Category</a>
        </div>

        <div class="table-responsive">
          <table class="table table-striped table-hover table-bordered shadow-sm">
            <thead class="table-dark">
              <tr>
                <th scope="col">Category Name</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var category in Model.Categories)
              {
                <tr>
                  <td>@category.CategoryName</td>
                  <td class="text-center">
                    <a asp-page="/Admin/Categories/Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-primary me-2">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-page="/Admin/Categories/Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-danger">
                      <i class="bi bi-trash"></i>
                    </a>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>