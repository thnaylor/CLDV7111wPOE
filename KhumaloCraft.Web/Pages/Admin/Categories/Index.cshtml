@page
@model KhumaloCraft.Web.Pages.Admin.Categories.IndexModel
@{
}

<h2>Category Management</h2>

<p>
  <a asp-page="/Admin/Categories/Create">Create New Category</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Category Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var category in Model.Categories)
    {
      <tr>
        <td>@category.CategoryName</td>
        <td>
          <a asp-page="/Admin/Categories/Edit" asp-route-id="@category.CategoryId">Edit</a> |
          <a asp-page="/Admin/Categories/Delete" asp-route-id="@category.CategoryId">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>