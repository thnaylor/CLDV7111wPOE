@page "{id:int}"
@model KhumaloCraft.Web.Pages.Admin.Products.EditModel
@{
}

<h2>Edit Product</h2>

<form method="post">
  <input type="hidden" asp-for="Product.ProductId" />

  <div class="form-group">
    <img id="image-preview" src="@Model.Product.ImageSrc" alt="Product Image" style="max-width: 200px; max-height: 200px;" />
  </div>

  <div class="form-group">
    <label asp-for="Product.Name"></label>
    <input asp-for="Product.Name" class="form-control" />
    <span asp-validation-for="Product.Name" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Product.Price"></label>
    <input asp-for="Product.Price" class="form-control" />
    <span asp-validation-for="Product.Price" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Product.Description"></label>
    <textarea asp-for="Product.Description" class="form-control"></textarea>
    <span asp-validation-for="Product.Description" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Product.ImageSrc"></label>
    <input asp-for="Product.ImageSrc" class="form-control" oninput="updateImagePreview()" />
    <span asp-validation-for="Product.ImageSrc" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Product.CategoryId">Category</label>
    <select asp-for="Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))">
      <option value="">-- Select Category --</option>
    </select>
    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
  <a asp-page="/Admin/Products/Index" class="btn btn-secondary">Cancel</a>
</form>

<script>
  function updateImagePreview() {
    var imageSrcInput = document.getElementById("imageSrcInput").value;
    var imagePreview = document.getElementById("image-preview");
    imagePreview.src = imageSrcInput;
  }
</script>