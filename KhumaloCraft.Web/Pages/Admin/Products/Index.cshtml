@page
@model KhumaloCraft.Web.Pages.Admin.Products.IndexModel
@{
}

<h2>Manage Products</h2>

<p>
  <a asp-page="/Admin/Products/Create">Create New Product</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var product in Model.Products)
    {
      <tr>
        <td><img width="200" src="@product.ImageSrc" alt="@product.Name"></td>
        <td>@product.Name</td>
        <td>@product.Price</td>
        <td width="500px">@product.Description</td>
        <td>
          <a asp-page="/Admin/Products/Edit" asp-route-id="@product.ProductId">Edit</a> |
          <a asp-page="/Admin/Products/Delete" asp-route-id="@product.ProductId">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>
